{
  "routes": [
    {
      "method": "GET",
      "path": "/applications/me/:campaignId",
      "handler": "application.myApplications",
      "config": {
          "policies": ["global::is-authenticated"],
          "operationId": "myApplications",
          "description": "Get applications related to current user"
      }
    },
    {
      "method": "GET",
      "path": "/applications",
      "handler": "application.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/applications/count",
      "handler": "application.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/applications/:id",
      "handler": "application.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/applications",
      "handler": "application.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/applications/:id",
      "handler": "application.update",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/applications/:id",
      "handler": "application.delete",
      "config": {
        "policies": ["is-concerned"]
      }
    }
  ]
}


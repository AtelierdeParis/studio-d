{
  "kind": "collectionType",
  "collectionName": "messages",
  "info": {
    "name": "Message",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "message": {
      "type": "text",
      "required": false
    },
    "place": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "company": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "author": {
      "type": "enumeration",
      "enum": [
        "company",
        "place"
      ],
      "required": false
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "accepted",
        "created",
        "requestcanceled",
        "requestcanceledbyplace",
        "bookingcanceledbyplace",
        "askcancel",
        "message",
        "disporemovedbyplace",
        "disporemovedbycompany"
      ],
      "required": true
    },
    "booking": {
      "model": "booking",
      "via": "messages"
    },
    "hasbeenread": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "notified": {
      "type": "boolean",
      "default": false
    },
    "disponibilities": {
      "collection": "disponibility",
      "via": "message"
    }
  }
}
